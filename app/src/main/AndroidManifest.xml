<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codepath.rawr">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".SearchResultsActivity" />
        <activity android:name=".ChatActivity" />
        <activity android:name=".TravelFormActivity" />
        <activity android:name=".AdditionalDetailsActivity" />
        <activity android:name=".SenderFormActivity" />
        <activity android:name=".ReceiverFormActivity" />
        <activity android:name=".LogoutActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".UpdateAdditionalDetailsActivity" />
        <activity android:name=".TravelAcceptedRequestsActivity" />
        <activity android:name=".TravelPendingRequestsActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ProfileActivity"></activity>
    </application>

</manifest>